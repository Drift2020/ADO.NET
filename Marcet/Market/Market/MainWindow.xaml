<Window x:Class="Market.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:Market"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="521.519" Width="752.082">
    <Grid>


        <Grid.RowDefinitions>

            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Grid  Grid.Row="1">
            <TabControl Name="tabControl1" >
                <TabItem Header="Product">
                    <Grid>
                        <!--<DataGrid  AutoGenerateColumns="True" ItemsSource="{Binding fio_Person}">
                            <DataGrid.DataContext>
                                <local:View_Model_Index/>
                            </DataGrid.DataContext>
                            
                        </DataGrid>-->
                        <ListView Name="Global_List"    Margin="5,5,5.333,4.667" 
                                    ScrollViewer.HorizontalScrollBarVisibility="Visible" Grid.ColumnSpan="2">
                            <ListView.View >
                                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Employee Information" ScrollViewer.HorizontalScrollBarVisibility="Visible">
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=data_of_receipt}" Header="Date" Width="100"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=fio_Person}" Header="FIO Person" Width="150"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=product}" Width="100">
                                        <GridViewColumnHeader  >Product
                                            <GridViewColumnHeader.ContextMenu>
                                                <ContextMenu Name="LastNameCM">
                                                    <MenuItem Header="Ascending"/>
                                                    <MenuItem Header="Descending"/>
                                                </ContextMenu>
                                            </GridViewColumnHeader.ContextMenu>
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=product_category}" Header="Product categories" Width="150"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=product_life}" Header="Life" Width="100"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=count}" Header="Count" Width="50"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=mark_up}" Header="Mark up" Width="50"/>
                                </GridView>
                            </ListView.View>
                            
                        </ListView>
                    </Grid>
                </TabItem>
                <TabItem Header="All info">
                    <Grid>

                    </Grid>
                </TabItem>

            </TabControl>







        </Grid>

        <Menu  VerticalAlignment="Top"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Height="19">
            <MenuItem Header="Menu">

              
                <MenuItem Header="Editor Product..." Command="{Binding Button_Editor_P}"></MenuItem>
              
                

                <MenuItem Header="Editor categories..." Command="{Binding Button_Editor_K}"></MenuItem>
                
                

                <MenuItem Header="Editor firm..." Command="{Binding Button_Editor_F}"></MenuItem>
                <Separator />
                <MenuItem Header="Exit" Command="{Binding Button_Editor_F}"></MenuItem>
            </MenuItem>
        </Menu>

    </Grid>


</Window>
