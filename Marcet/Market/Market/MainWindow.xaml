<Window x:Class="Market.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Market"
        mc:Ignorable="d"
        Title="MainWindow" Height="521.519" Width="752.082">
    <Grid>


        <Grid.RowDefinitions>

            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Grid  Grid.Row="1">
            <TabControl Name="tabControl1" >
                <TabItem Header="Product">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="104*"/>
                            <ColumnDefinition Width="635*"/>
                        </Grid.ColumnDefinitions>
                        <ListView  Margin="5,5,5.333,4.667" ScrollViewer.HorizontalScrollBarVisibility="Visible" Grid.ColumnSpan="2" >
                            <ListView.View>

                                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Employee Information" ScrollViewer.HorizontalScrollBarVisibility="Visible">

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=FirstName}" Header="Date" Width="100"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=EmployeeNumber}" Header="FIO Person" Width="150"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=LastName}" Width="100">
                                        <GridViewColumnHeader>Product
                                            <GridViewColumnHeader.ContextMenu>
                                                <ContextMenu Name="LastNameCM">
                                                    <MenuItem Header="Ascending"/>
                                                    <MenuItem Header="Descending"/>
                                                </ContextMenu>
                                            </GridViewColumnHeader.ContextMenu>
                                        </GridViewColumnHeader>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=EmployeeNumber}" Header="Product categories" Width="150"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=EmployeeNumber}" Header="Life" Width="100"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=EmployeeNumber}" Header="Count" Width="50"/>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=EmployeeNumber}" Header="Mark up" Width="50"/>

                                </GridView>
                            </ListView.View>

                        </ListView>
                    </Grid>
                </TabItem>
                <TabItem Header="categories">
                    <Grid>

                    </Grid>
                </TabItem>

            </TabControl>







        </Grid>

        <Menu  VerticalAlignment="Top"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Height="19">
            <MenuItem Header="Menu">

                <MenuItem Header="Add Product..." Command="{Binding Button_Add_P}"></MenuItem>
                <MenuItem Header="Edit Product..." Command="{Binding Button_Add_P}"></MenuItem>
                <MenuItem Header="Delete Product" Command="{Binding Button_Add_P}"></MenuItem>
                <Separator />
                <MenuItem Header="Add categories..." Command="{Binding Button_Add_K}"></MenuItem>
                <MenuItem Header="Edit categories..." Command="{Binding Button_Edit_K}"></MenuItem>
                <MenuItem Header="Delete categories" Command="{Binding Button_Del_K}"></MenuItem>
                <Separator />
                <MenuItem Header="Add firm..." Command="{Binding Button_Add_F}"></MenuItem>
                <MenuItem Header="Edit firm..." Command="{Binding Button_Edit_F}"></MenuItem>
                <MenuItem Header="Delete firm" Command="{Binding Button_Del_F}"></MenuItem>
            </MenuItem>
        </Menu>

    </Grid>


</Window>
